<div class="topics-filter">
  <span class="topics-filter__label">Topics</span>
  <ul class="pills">
    <% Constants::DEMAND_TOPICS.each do |topic| %>
      <% is_active_topic = topic == params[:topic] %>
      <li><%= link_to("#{topic}", is_active_topic ? search_url(request.query_parameters.merge({topic: ''})) : search_url(request.query_parameters.merge({topic: topic})), class: "btn btn-primary--outline #{ is_active_topic ? 'is-active' : ''}") %></li>
    <% end %>
  </ul>
</div>
